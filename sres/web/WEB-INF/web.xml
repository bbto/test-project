<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>SRES</display-name>
    <context-param>
        <param-name>forbidden_page</param-name>
        <param-value>/forbidden.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>login_page</param-name>
        <param-value>/login.jsp</param-value>
    </context-param>
    <filter>
        <description>Allows access to admin role users</description>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>com.sres.filter.AdminAuthFilter</filter-class>
        </filter>
    <filter>
        <filter-name>ProfessorAuthFilter</filter-name>
        <filter-class>com.sres.filter.ProfessorAuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>StudentAuthFilter</filter-name>
        <filter-class>com.sres.filter.StudentAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ProfessorAuthFilter</filter-name>
        <url-pattern>/professor/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StudentAuthFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.sres.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCompetitionServlet</servlet-name>
        <servlet-class>com.sres.servlet.AddCompetitionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCompetitionServlet</servlet-name>
        <servlet-class>com.sres.servlet.RemoveCompetitionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProfessor</servlet-name>
        <servlet-class>com.sres.servlet.AddProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSubjectServlet</servlet-name>
        <servlet-class>com.sres.servlet.AddSubjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCompetitionServlet</servlet-name>
        <url-pattern>/admin/addCompetition</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCompetitionServlet</servlet-name>
        <url-pattern>/admin/removeCompetition</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProfessor</servlet-name>
        <url-pattern>/admin/addProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSubjectServlet</servlet-name>
        <url-pattern>/professor/addSubject</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    <env-entry>
        <description>MySQL JDBC Driver</description>
        <env-entry-name>driver</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>com.mysql.jdbc.Driver</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Database connection URL</description>
        <env-entry-name>database</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>jdbc:mysql://localhost:3306/sres</env-entry-value>
    </env-entry>
    <env-entry>
        <description>MySQL Database username</description>
        <env-entry-name>username</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>sres</env-entry-value>
    </env-entry>
    <env-entry>
        <description>MySQL database user password</description>
        <env-entry-name>dbpassword</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>default</env-entry-value>
        </env-entry>
    </web-app>
