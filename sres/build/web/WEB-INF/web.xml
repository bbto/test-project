<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>SRES</display-name>
    <context-param>
        <param-name>forbidden_page</param-name>
        <param-value>/forbidden.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>login_page</param-name>
        <param-value>/login.jsp</param-value>
    </context-param>
    <filter>
        <description>Allows access to admin role users</description>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>com.sres.filter.AdminAuthFilter</filter-class>
        </filter>
    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.sres.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    <env-entry>
        <description>MySQL JDBC Driver</description>
        <env-entry-name>driver</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>com.mysql.jdbc.Driver</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Database connection URL</description>
        <env-entry-name>database</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:3306/sres</env-entry-value>
    </env-entry>
    <env-entry>
        <description>MySQL Database username</description>
        <env-entry-name>username</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>root</env-entry-value>
    </env-entry>
    <env-entry>
        <description>MySQL database user password</description>
        <env-entry-name>password</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    </web-app>
